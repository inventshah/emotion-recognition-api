{
	"compilerOptions": {
		"strict": true,
		"checkJs": true,
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"lib": ["ES2022", "DOM"],
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "Node"
	},
	"exclude": ["node_modules"],
	"include": ["src/**/*.ts"]
}
